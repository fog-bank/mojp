<Project Sdk="Microsoft.NET.Sdk">

  <!-- Application -->
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net10.0-windows;net472</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <AssemblyName>mojp</AssemblyName>
    <AssemblyTitle>$(Title)</AssemblyTitle>
    <RootNamespace>Mojp</RootNamespace>
    <ApplicationIcon>Resources\dictionary.ico</ApplicationIcon>
  </PropertyGroup>

  <!-- Global Usings -->
  <PropertyGroup>
    <ImplicitUsings>disable</ImplicitUsings>
  </PropertyGroup>

  <!-- Build -->
  <PropertyGroup>
    <Configurations>Debug;Release;Offline</Configurations>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Nullable>disable</Nullable>
    <NoWarn>$(NoWarn);CA1847;IDE0057;IDE0180</NoWarn>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Offline'">
    <Optimize>true</Optimize>
  </PropertyGroup>

  <!-- Package -->
  <PropertyGroup>
    <Title>MTGO Japanese Card Text Preview</Title>
    <Authors>fog-bank</Authors>
    <Company>co3366353</Company>
    <Description>MO 日本語カードテキスト表示ツール</Description>
    <Copyright>Copyright © $([System.DateTime]::Now.ToString(yyyy)) fog-bank. Some rights reserved.</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://fog-bank.github.io/mojp/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/fog-bank/mojp</RepositoryUrl>
    <PackageReleaseNotes>https://github.com/fog-bank/mojp/releases/tag/v$(Version)</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <NeutralLanguage>ja-JP</NeutralLanguage>
    <Version>3.5.0</Version>
    <AssemblyVersion>3.5.0.0</AssemblyVersion>
    <FileVersion>3.5.5$([System.DateTime]::Now.ToString(MMdd)).0</FileVersion>
  </PropertyGroup>

  <!-- Code Analysis -->
  <PropertyGroup>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <AnalysisLevel>latest-recommended</AnalysisLevel>
  </PropertyGroup>

  <!-- Dependencies -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net472' And '$(Configuration)' != 'Offline'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>

  <!-- Items -->
  <!--<ItemGroup>
    <ApplicationDefinition Remove="App.xaml" />
    <Page Include="App.xaml" />
    <None Update="Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
    <Compile Update="Settings.Designer.cs">
      <AutoGen>true</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
    </Compile>
  </ItemGroup>-->
  <ItemGroup>
    <Compile Include="..\mojp\*.cs" />
    <Page Include="..\mojp\*.xaml" />
    <Content Include="..\mojp\*.xml" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="Resources\*.png" />
    <Resource Include="Resources\dictionary.ico" />
    <Content Include="..\README.md">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>
  <ItemGroup Condition="'$(Configuration)' != 'Offline'">
    <Content Include="..\mojp\appendix.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\mojp\cards.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup Condition="'$(Configuration)' == 'Offline'">
    <EmbeddedResource Include="..\mojp\cards.xml" />
  </ItemGroup>

</Project>
